<!--pages/my/index/index.wxml-->
<!-- 地区轮播图 -->
<swiper class="swiperBox" indicator-dots autoplay interval="2000" circular
	indicator-active-color="#ffffff" indicator-color="rgba(0, 0, 0, .3)"> 
    <swiper-item wx:for="{{imgUrls}}" wx:key="key" bindtap="imgClick" data-index="{{index}}">
        <image src="{{item}}"></image>
    </swiper-item>
</swiper>
<!-- 分类图标 -->
<view class="labels_box">
    <view class="label_item_box" wx:for="{{typeInfo}}" wx:key="key" wx:for-item="type">
        <image src="{{type.img}}" bindtap="imgClick" data-index="{{index}}" data-type="label"></image>
        <text>{{type.name}}</text>
    </view>
</view>
<!-- 搜索框 -->
<view style="height: 50rpx;margin-left: 20rpx;margin-top: 10rpx;">
    <text style="font-size: 30rpx;font-weight: 600;">搜索商家</text>
</view>
<view class="search_box" bindtap="clickToSearch">
    <iconfont name="search" style="margin-left: 20rpx;"></iconfont>
</view>
<!-- 南康家居馆 -->
<view style="height: 50rpx;margin-left: 20rpx;margin-top: 10rpx;">
    <text style="font-size: 30rpx;font-weight: 600;">南康家具馆</text>
</view>
<view class="area-basic-box">
    <view class="area-basic-item-box" wx:for="{{imgUrls1}}" wx:key="key" wx:for-item="area">
        <image src="{{area.url}}" bindtap="imgClick" data-index="{{index}}" data-type="area"></image>
        <view class="area-basic-item-text">
            <text class="mid">{{area.name}}</text>
        </view>
    </view>
</view>
<!-- 爆款产品 -->
<view style="height: 50rpx;margin-left: 20rpx;margin-top: 10rpx;">
    <text style="font-size: 30rpx;font-weight: 600;">最多人看</text>
</view>
<view class="store-basic-box" wx:for="{{hotProductObj}}" wx:key="key" wx:for-item="product">
    <view class="store-basic-item-box" bindtap="clickToStore" data-openid="{{product.openid1}}">
        <image src="{{product.url1}}">
        </image>
        <view class="store-basic-item-text">
            <view style="font-size: 28rpx;margin-left: 20rpx; height: 80rpx;">
                {{product.label1}}[{{product.labelName1}}]
            </view>
            <view style="display: flex;flex-direction: row;margin-left: 20rpx;height: 80rpx;font-weight: 400; color: rgb(250, 35, 35);">
                <view style="font-size: 24rpx;height: 30rpx;margin-top: 23rpx;">￥</view>
                <text decode="true" style="font-size: 34rpx;line-height: 80rpx;">{{product.price1}}&emsp;&emsp;</text>
                <view style="font-size: 24rpx;color: rgb(102, 101, 102); height: 30rpx;margin-top: 20rpx;">浏览:{{product.browseNum1}}</view>
            </view>
            <view style="font-size: 24rpx;margin-left: 20rpx;height: 30rpx;color: rgb(131, 141, 141);display: flex;flex-direction: row;">
                <text decode="true">{{product.brandName1}}&emsp;&emsp;&emsp;&emsp;</text>
                <text style="font-size: 26rpx; color: rgb(48, 49, 49);">进店></text>
            </view>
        </view>
        
    </view>
    <view class="store-basic-item-divline">
    </view>
    <view class="store-basic-item-box" bindtap="clickToStore" data-openid="{{product.openid2}}">
        <image src="{{product.url2}}">
        </image>
        <view class="store-basic-item-text">
            <view style="font-size: 28rpx;margin-left: 20rpx; height: 80rpx;">
                {{product.label2}}[{{product.labelName2}}]
            </view>
            <view style="display: flex;flex-direction: row;margin-left: 20rpx;height: 80rpx;font-weight: 400; color: rgb(250, 35, 35);">
                <view style="font-size: 24rpx;height: 30rpx;margin-top: 23rpx;">￥</view>
                <text decode="true" style="font-size: 34rpx;line-height: 80rpx;">{{product.price2}}&emsp;&emsp;</text>
                <view style="font-size: 24rpx;color: rgb(102, 101, 102); height: 30rpx;margin-top: 20rpx;">浏览:{{product.browseNum2}}</view>
            </view>
            <view style="font-size: 24rpx;margin-left: 20rpx;height: 30rpx;color: rgb(131, 141, 141);display: flex;flex-direction: row;">
                <text decode="true">{{product.brandName2}}&emsp;&emsp;&emsp;&emsp;</text>
                <text style="font-size: 26rpx; color: rgb(48, 49, 49);">进店></text>
            </view>
        </view>
    </view>
</view>


