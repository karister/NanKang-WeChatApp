.area-basic-box {
  width: 90%;
  height: 300rpx;
  margin:0 auto;
  display: flex;
  flex-direction: row;
}
.area-basic-item-box {
  width: 47%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
}
.area-basic-item-box image {
  height: 210rpx;
  width: 90%;
  margin: 20rpx auto;
  border-radius: 10rpx;
}
.area-basic-item-divline {
  width: 6%;
  height: 300rpx
}
.area-basic-item-text {
  height: 50rpx;
}
.area-basic-item-text > text {
  font-size: 28rpx;
}



