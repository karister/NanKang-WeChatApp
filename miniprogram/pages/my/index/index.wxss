  width: 49%;
  height: 560rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 2rpx rgba(85, 85, 85, 0.05);
