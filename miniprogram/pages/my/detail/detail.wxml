<view class="info_box">
    <view class="basic_info_box">
        <view class="basic_info_image_box mid">
            <image class="mid" src="{{store_info.imgSrc}}"></image>
        </view>
        <view class="basic_info_text_box">
            <view class="basic_info_brand_box">
                <iconfont name="brand"></iconfont>
                <view class="basic_info_brand_text">{{store_info.brand}}</view>
            </view>
            
            <text class="basic_info_text_label">欧式沙发餐厅桌椅</text>
            <text class="basic_info_text_browse">浏览: 2095</text>
        </view>
    </view>
    <view class="other_info_box">
        <!-- 企业认证 -->
        <view class="other_info_auth_icon">
            <iconfont name="unauth"></iconfont>
            <text class="other_info_text">企业未认证</text>
        </view>
        <!-- 地址信息 -->
        <view class="other_info_address_box">
            <!-- 地址文本 -->
            <view class="other_info_address_text">
                <iconfont name="address"></iconfont>
                <text class="other_info_text">{{area_info[display_index].address}}</text>
            </view>
            <!-- 查看定位 -->
            <view class="other_info_address_location mid"  bindtap="onLocation">
                <iconfont name="address"></iconfont>
                <text>去这里</text>
            </view>
            <!-- 空隙占位 -->
            <view style="width: 2%;height: 100%;"></view>
            
        </view>
        <!-- 联系电话 -->
        <view class="other_info_phone_box">
            <!-- 电话号码 -->
            <view class="other_info_phone_number ">
                <iconfont name="phone"></iconfont>
                <text style="margin: 0 10rpx;">{{store_info.phone}}</text>
            </view>
            <!-- 拨打电话呼起 -->
            <view class="other_info_phone_call mid" bindtap="callPhone">
                <iconfont name="phone"></iconfont>
                <text>立即拨打</text>
            </view>
            <!-- 空隙占位 -->
            <view style="width: 2%;height: 100%;"></view>
        </view>
    </view>
</view>
<view class="div_line"></view>
<view class="store_introduce"> 
</view>


