  height: 200rpx;
  margin: 0 auto;
  background-color: white;
  /* background-color: #F6F6F6; */
  /* border: 1rpx solid red; */
  display: flex;
  flex-direction: row;
}
.user_avatar_box{
  height: 100rpx;
  width: 100rpx;
  margin: 50rpx 0;
}
.user_text_box{
  height: 50%;
  margin: 50rpx 20rpx;
  display: flex;
  flex-direction: column;
}
.user_text_nickname{
  height: 50%;
  font-size: 30rpx;
  color: rgb(105, 103, 101);
  /* border: 1rpx solid red; */
}
.user_text_phone{
  height: 50%;
  font-size: 30rpx;
  color: rgb(105, 103, 101);
}
.admin_function_box{
  width: 90%;
  height: 500rpx;
  margin: 0 auto;
  background-color: white;
  border-radius: 20rpx;
}
.divLine{
  background-color: #f6f6f6;
  width: 100%;
  height: 4rpx;
 }
.admin_function_item_box{
  width: 100%;
