<view class="label_item_box" >
  <view style="width: 100%;height: 140rpx;display: flex;flex-direction: row;">
    <view style="width: 70%;height: 100%;display: flex;flex-direction: column;">
      <view class="label_text_box">
        <iconfont name="label"></iconfont>
        <text style="margin-left: 20rpx;">区域大图</text>
      </view>
      <text class="detail_text_box">点击图片可预览大图,长按可进行编辑
      上传后点击右边按钮提交修改</text>
    </view>
    <view class="update_button mid" bindtap="onPublish">
      <iconfont name="update"></iconfont>
      <text style="font-size: 26rpx;margin-top: 10rpx;">提交修改</text>
    </view>
  </view>
  <view style="background-color: #e4e4e4;width: 100%;height: 2rpx;"></view>
  <view style="width: 100%;height: 450rpx;display: flex;flex-direction: column;">
    <view style="margin-top: 30rpx;">
      <image
        style="width: 200rpx;height: 150rpx;margin-left: 18rpx;border: 2rpx solid {{image.borderColor}};"
        wx:for="{{imageObject}}" wx:key="key" wx:for-item="image" wx:for-index="imageIndex"
        src="{{image.url}}"
        bindtap="viewImage"
        data-imageindex="{{imageIndex}}"
        bindlongpress="editImage"
      >
      </image>
    </view>
    <view style="display: flex;flex-direction: row;">
      <van-button bindtap="allClear" class="mid" size="small" style="width: 25%;margin-top: 10rpx;" type="danger" round>全部清空</van-button>
      <van-button bindclick="deleteImage" class="mid" size="small" style="width: 25%;margin-top: 10rpx;" type="primary" round disabled="{{disabled}}">删除图片</van-button>
      <van-button bindclick="chooseImage" class="mid" size="small" style="width: 25%;margin-top: 10rpx;" type="info" round disabled="{{disabled}}">更换图片</van-button>
      <van-button bindclick="cancelSelect" class="mid" size="small" style="width: 25%;margin-top: 10rpx;" type="info" round plain disabled="{{disabled}}">取消选择</van-button>
    </view>
  </view>
</view>
<van-toast id="van-toast"/>
