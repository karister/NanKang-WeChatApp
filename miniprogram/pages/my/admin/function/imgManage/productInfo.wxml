<!--pages/my/admin/function/storeInfo/storeInfo.wxml-->
<view class="info_box"> 

    <view style="width: 100%;height: 120rpx;">
        <view class="step_info_box mid">
            <iconfont name="info"></iconfont>
            <text style="font-size: 28rpx;">产品数据</text>
        </view>
    </view>

    <view class="brand_img_box">
        <text>产品图</text>
        <image src="{{imageUrl}}"></image>
    </view>
    <form bindsubmit="updateData">
        <view class="brand_normal_text">
            <text>型号</text>
            <van-cell-group>
            <van-field
                name="model"
                model:value="{{ model }}"
                bind:change="changeSetData"
                data-item="model"
                placeholder="例：X X家具"
                clickable
                clearable
            />
            </van-cell-group>
        </view>
        <view class="brand_normal_text">
            <text>描述</text>
            <van-cell-group>
            <van-field
                name="label"
                model:value="{{ label }}"
                bind:change="changeSetData"
                data-item="label"
                placeholder="例：X X家具"
                clickable
                clearable
            />
            </van-cell-group>
        </view>
        <view class="brand_normal_text">
            <text>价格</text>
            <van-cell-group>
            <van-field
                name="price"
                model:value="{{ price }}"
                bind:change="changeSetData"
                data-item="price"
                placeholder="例：X X家具"
                clickable
                clearable
            />
            </van-cell-group>
        </view>

        <view class="mid" style="margin: 25rpx 0">
            <van-button type="primary" round plain size="normal" icon="arrow" color="" form-type="submit">保存</van-button>
        </view> 
    </form> 
</view>
<!-- 提交表单的轻提示 -->
<van-toast id="van-toast"/>
<!-- 弹窗通知 -->
<van-dialog id="van-dialog" />
